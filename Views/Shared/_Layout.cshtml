
@inject SignInManager<IdentityUser> SignInManager




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @* <link href="~/css/bootstrap-rtl.css" rel="stylesheet" />*@
    <link href="~/lib/bootstrap4/css/bootstrap-rtl.css" rel="stylesheet" />
    @*<link href="~/css/site.css" rel="stylesheet" />*@

</head>
<body class="rtl" style="font-family: Sahel,sans-serif;">

    <header>


        @*#d8ccea
            #ccd7ea*@
        <nav style="background-color: #ff3d3d;
        color:white" class="navbar navbar-expand-md navbar-toggleable-md">
            @*class="navbar navbar-expand-md navbar-toggleable-md navbar-light
                bg-white border-bottom box-shadow mb-3"*@<!-->-->
            <div class="container">
                @*<a class="navbar-brand" style="color:yellow;text-shadow:1px 1px" asp-area="" asp-controller="Home" asp-action="Index">Bamak</a>*@
                <form class="col-8" asp-controller="Home" asp-action="Search">

                    <input class="col-6" type="search" name="SearchString" center;" placeholder="جستجو" />
                    <input type="submit" class="bg-warning" value="Filter" placeholder="جستوجو" />

                </form>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    Menue
                </button>

                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon text-white">Menu</span>
                    </button>*@

                <div class="navbar-collapse collapse d-md-inline-flex flex-md-row-reverse">
                    <ul class="navbar-nav flex-grow-1" style="color:white">

                        <li class="nav-item">
                            <a class="nav-link " style="color: #e4ff2a" asp-area="" asp-controller="Home" asp-action="Index">صفحه اصلی</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #e4ff2a" asp-area="" asp-controller="Home" asp-action="Privacy">تماس با ما</a>
                        </li>
                        @*<ul class="navbar-nav flex-grow-1 ml-auto">*@
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item pull-right">
                                <a class="nav-link " style="color: #e4ff2a">@User.Identity.Name عزیزخوش آمدید!</a>
                            </li>

                            <li class="nav-item ml-auto">
                                <form asp-controller="Account" asp-action="LogOut" method="post">
                                    <button type="submit" class="btn nav-link text-dark">خروج</button>
                                </form>
                            </li>
                            <li class="nav-item pull-right">

                                <a class="nav-link" style="color: #e4ff2a" asp-area="" asp-controller="Account" asp-action="LogOut">خروج</a>

                            </li>
                        }
                        else
                        {


                            <li class="nav-item pull-right">
                                <a class="nav-link" style="color: #e4ff2a" asp-area="" asp-controller="Account" asp-action="Login">ورود</a>
                            </li>



                            <li class="nav-item pull-right">
                                <a class="nav-link" style="color: #e4ff2a" asp-area="" asp-controller="Account" asp-action="Register">ثبت نام</a>
                            </li>
                        }




                    </ul>

                </div>
            </div>
        </nav>

    </header>

    @*<div class="container">*@
    <div class="row">


        <div class="col-md">

            @RenderBody()

        </div>





        @*<div class="col-md col-lg "></div>*@

    </div>
    @*</div>*@


    <footer class="border-top footer text-muted  bg-dark  " style="margin-bottom: -143px; margin-top: 345px;">
        <div class="container">
            &copy; 1399 - BookAudiomak - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a><br />
            <a asp-area="" asp-controller="Home" asp-action="Index">Bamak</a>
            <h6>Instagram:bamak-11</h6>
            <h6>Telgram:bamak</h6>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
